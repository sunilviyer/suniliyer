{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist"
  },
  "include": [
    "./**/*.ts",
    "../**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../**/*.test.ts",
    "../**/__tests__/**"
  ]
}